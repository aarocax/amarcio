{% extends 'amarcio/index.html.twig' %}

{% form_theme form _self %}

{% block radio_widget %}
  {% spaceless %}
    <div>
      {% if value is defined %}
        {% if value == "card" %}
          <img src="{{ asset('images/visas.png') }}" />
        {% else %}
          <img src="{{ asset('images/paypal.png') }}" />
        {% endif %}
      {% endif %}
      <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />

    </div>
  {% endspaceless %}
{% endblock radio_widget %}

{% block body %}
<!-- Formularios -->
  <div class="formularios haz-un-donativo">
    <img class="pago-seguro" src="../images/fundacionandresmarcio--pago-seguro.jpg" alt="">
    {{ form_start(form, {'attr': {'id': 'hazUnDonativoForm'}}) }}
      <div class="haz-un-donativo--parte1">
        <div class="form-group">
          {{ form_label(form.contribution) }}
          {{ form_widget(form.contribution, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.contribution) }}
        </div>
        <div class="form-group-otro">
          <label for="appbundle_haz_un_donativo_otro" id="appbundle_haz_un_donativo_otro_label" style="display:none">Importe del donativo</label>
          {{ form_widget(form.otro, {'attr': {'class': 'form-control', 'style': 'display:none;'} }) }}
          {{ form_errors(form.otro) }}
        </div>
        <div class="modalidad_de_pago">
          <div class="form-group">
            {{ form_label(form.paymentMedia) }}
            {{ form_widget(form.paymentMedia, {'attr': {'class': 'form-control formas-de-pago'}}) }}
            {{ form_errors(form.paymentMedia) }}
          </div>
        </div>
        <button type="button" id="button-continuar">Continuar</button>
        <label class="error" id="hazte-colaborador-mensaje" style="display: none;">Por favor seleccione un medio pago</label>
      </div>

      <div class="haz-un-donativo--parte2" id="datos_personales" style="display: none;">
        <p>Tus datos ¡te llevará menos de un minuto!</p>
        <div class="form-group">
          {{ form_label(form.name) }}
          {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.name) }}
        </div>
        <div class="form-group">
          {{ form_label(form.surname) }}
          {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.surname) }}
        </div>
        <div class="form-group">
          {{ form_label(form.email) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
          {{ form_label(form.nif) }}
          {{ form_widget(form.nif, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.nif) }}
        </div>
        <div class="form-group">
          {{ form_label(form.cp) }}
          {{ form_widget(form.cp, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.cp) }}
        </div>
        <div class="form-group">
          {{ form_label(form.phone) }}
          {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.phone) }}
        </div>
        <div class="form-group">
          {{ form_label(form.known) }}
          {{ form_widget(form.known, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.known) }}
        </div>
        <div class="form-group">
         * Campos obligatorios
        </div>
        <div class="form-group checkbox">
          {{ form_label(form.correspondence) }}
          {{ form_widget(form.correspondence, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.correspondence) }}
        </div>
        <div id="correspondence-data" class="" style="display: none;">
          <div class="form-group">
            {{ form_label(form.address) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.address) }}
          </div>
          <br>
          <div class="form-group">
            {{ form_label(form.town) }}
            {{ form_widget(form.town, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.town) }}
          </div>
          <br>
          <div class="form-group">
            {{ form_label(form.province) }}
            {{ form_widget(form.province, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.province) }}
          </div>
        </div>
        <div class="g-recaptcha" data-sitekey="6LccORsTAAAAAJJLxFpHhFuUH3cG_enKLzN7tZvj"></div>
        <div class="form-group checkbox">
            {{ form_label(form.acceptConditions) }}
            {{ form_widget(form.acceptConditions, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.acceptConditions) }}
            <a class="politica-de-privacidad--link" data-remodal-target="modal">Leer política de privacidad</a>
        </div>
        {% if not captcha_message == "" %}
            <div class="form-group">
              {{ captcha_message }}
            </div>
        {% endif %}
        {{ form_rest(form) }}
        <button type="submit" id="card-button-container" name="enviar" class="btn btn-primary hidden"> Dona</button>
      </div>

    {{ form_end(form) }}
  </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
{% block javascript %}
	{{ parent() }}
{% endblock %}
